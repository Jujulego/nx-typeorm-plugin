{
  "$schema": "http://json-schema.org/draft-07/schema",
  "cli": "nx",
  "title": "db-create executor",
  "description": "Create a database.",
  "type": "object",
  "properties": {
    "database": {
      "type": "string",
      "description": "Database to create.",
      "default": "default"
    },
    "verbosity": {
      "alias": "v",
      "type": "string",
      "enum": ["debug", "info", "warn", "error"],
      "description": "Verbosity level.",
      "default": "info"
    }
  },
  "required": ["database"]
}
